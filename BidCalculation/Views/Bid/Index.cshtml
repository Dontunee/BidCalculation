@model BidCalculation.Models.Vehicle

<!DOCTYPE html>
<html>
<head>
    <title>Bid Calculation</title>
</head>
<body>
<form asp-action="Calculate" method="post">
    <div>
        <label for="BasePrice">Vehicle Base Price</label>
        <input type="number" asp-for="BasePrice" step="0.01" min="0" name="basePrice" />
    </div>
    <div>
        <label for="Type">Vehicle Type</label>
        <select name="vehicleType">
            <option value="Common">Common</option>
            <option value="Luxury">Luxury</option>
        </select>
    </div>
    <div>
        <label>Basic Fee</label>
        <span>@Model.BasicFee</span>
    </div>
    <div>
        <label>Special Fee</label>
        <span>@Model.SpecialFee</span>
    </div>
    <div>
        <label>Association Fee</label>
        <span>@Model.AssociationFee</span>
    </div>
    <div>
        <label>Storage Fee</label>
        <span>@Model.StorageFee</span>
    </div>
    <div>
        <label>Total Price</label>
        <span>@Model.TotalPrice</span>
    </div>
    <button type="submit">Calculate</button>
</form>
</body>
</html>
